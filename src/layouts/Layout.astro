---
import { langlist } from "@/i18n/ui";
import { translation } from "@/i18n/utils";
import { basics } from "@/pages/es/cv.json";

const { name, titulo } = basics;

const currentlang = Astro.currentLocale || "es";

const translator = translation(currentlang as keyof typeof langlist);
---

<!doctype html>
<html lang={currentlang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body>
    <slot />
  </body>
  <title>
    {translator("home.title")}
    {name} -
    {titulo}
  </title>
</html>

<style is:global>
  html {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      Courier,
      monospace;
    background: #fff;
    letter-spacing: -0.025rem;
  }

  body,
  figure {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  p {
    color: #666;
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
  }
  @media print {
    .no-print {
      display: none !important;
    }
  }
  .print {
    display: none !important;
  }
  @media print {
    .print {
      display: block !important;
    }
  }

  .darkmode {
    --base-color: #070b1d;
    --base-variant: #101425;
    --text-color: #ffffff;
    --secondary-text: #a4a5b8;
    --primary-color: #3a435d;
    --accent-color: #0071ff;
  }

  #switch-theme {
    height: 50px;
    width: 50px;
    padding: 0px;
    border-radius: 50%;
    background-color: var(--base-variant);
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    top: 20px;
    right: 20px;
    cursor: pointer;
    border: none;
  }

  #switch-theme svg {
    fill: var(--primary-color);
  }

  #switch-theme svg:last-child {
    display: none;
  }

  .darkmode #switch-theme svg:first-child {
    display: none;
  }

  .darkmode #switch-theme svg:last-child {
    display: block;
  }
</style>

<script></script>
