---
import Aboutme from "@/pages/es/Section/aboutme.astro";
import Exprince from "@/pages/es/Section/experience.astro";
import Hero from "@/pages/es/Section/hero.astro";
import Keyboarmanager from "@/pages/es/Section/Keyboarmanager.astro";
import Skills from "@/pages/es/Section/skills.astro";
import Layout from "@/layouts/Layout.astro";
import Lang from "@/components/changelan.astro";
---

<Layout >
  <main>
    <Lang/>
    <Hero />
    <Aboutme />
    <Exprince />
    <Skills />
